
  
  {
    "manifest_version": 3,
    "name": "TabNest",
    "version": "1.0",
    "description": "Make your browser follow your focus.",
    "permissions": [
      "storage",
      "tabs",
      "windows"
    ],
    "action": {
      "default_title": "TabNest",
      "default_popup": "./popup/popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["tab.html", "tab.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  